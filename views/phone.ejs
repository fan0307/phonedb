<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="blogs content">
    <h2>All Phones</h2>

    <% if (phones.length > 0) { %>
      <% phones.forEach(eachphone => { %>
        <a class="single" href="/phones/<%= eachphone.id %>">
          <h3 class="title"><%= eachphone.esn %></h3>
          <p class="snippet"><%= eachphone.model%></p>
        </a>
      <% }) %>
    <% } else { %>
      <p>There are no phones to display...</p>
    <% } %>
    
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>