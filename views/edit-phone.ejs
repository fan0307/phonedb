<html lang="en">
<%- include("./partials/head.ejs") %>

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
<script>
$(document).ready(function() {
  $('.select2-enable').select2({
    tags: true, // Allows the input of custom tags
    tokenSeparators: [','], // Specifies characters that will automatically trigger a new tag
    placeholder: "Select or type",
    allowClear: true // Allows a clear button to be included
  });
});
</script>

<body>
  <%- include("./partials/nav.ejs") %>

  <h2>Edit-Profile</h2>

  <div class="create-blog content">
    <form action="/edit-phone/<%= phone.id %>" method="POST">
      <label for="esn">ESN:</label>
      <input type="text" value="<%= phone.esn %>" id="esn" name="esn" required>
      <label for="model">Model:</label>
      <input type="text" value="<%= phone.model %>" id="model" name="model" required>
      <label for="maker">Maker:</label>
      <select class="select2-enable" id="maker" name="maker" style="width: 400px;">
        <option value="<%= phone.maker %>"><%= phone.maker %></option> >
        <option value="Apple">Apple</option>
        <option value="Samsung">Samsung</option>
        <option value="Verizon">Verizon</option>
        <option value="T-Mobile">T-Mobile</option>
        <option value="HTC">HTC</option>
        <option value="Google">Google</option>
        <option value="Motorola">Motorola</option>
        <option value="LG">LG</option>
        <option value="Lenovo">Lenovo</option>
        <option value="Kyocera">Kyocera</option>
      </select>
      <!-- <input type="text" value="<%= phone.maker %>" name="maker" id="maker" required> -->
      <label for="carrier">Carrier:</label>
      <select class="select2-enable" id="carrier" name="carrier" style="width: 400px;">
        <option value="<%= phone.carrier %>"><%= phone.carrier %></option> 
        <option value="AT&T">AT&T</option>
        <option value="Verizon">Verizon</option>
        <option value="T-Mobile">T-Mobile</option>
        <option value="Sprint">Sprint</option>
        <option value="Futuredial">Futuredial</option>
      </select>
      <!-- <input type="text" value="<%= phone.carrier %>" name="carrier" id="carrier" required> -->
      <label for="barcode">Bar Code:</label>
      <input type="text" value="<%= phone.barcode %>" name="barcode" id="barcode" required>
      <label for="PhRmLoc">Ph Rm Loc:</label>
      <input type="text" value="<%= phone.PhRmLoc %>" name="PhRmLoc" id="PhRmLoc">
      <label for="CurLoc">Cur Loc:</label>
      <select class="select2-enable" name="CurLoc" id="CurLoc" style="width: 400px;">
        <option value=<%= phone.CurLoc %>><%= phone.CurLoc %></option>
        <option value="Phone Room">Phone Room</option>
        <option value="Return">Return</option>
        <option value="Adrian Xu">Adrian Xu</option>
        <option value="Chris Chen">Chris Chen</option>
        <option value="Jason Li">Jason Li</option>
        <option value="Lynn Wang">Lynn Wang</option>
        <option value="Nick Zhang">Nick Zhang</option>
        <option value="Jet Li">Jet Li</option>
        <option value="Jeffery Zhang">Jeffery Zhang</option>
        <option value="Darren Madonick">Darren Madonick</option>
        <option value="Hexi Huang">Hexi Huang</option>
        <option value="Richard Cao">Richard Cao</option>
        <option value="Tam Bui">Tam Bui</option>
        <option value="Fan Xu">Fan Xu</option>
        <option value="Nagalakshmi Duvvuri">Nagalakshmi Duvvuri</option>
        <option value="Jimish Dodia">Jimish Dodia</option>
        <option value="Clarice Liao">Clarice Liao</option>
        <option value="Glenn Liao">Glenn Liao</option>
        <option value="China">China</option>
        <option value="Taiwan">Taiwan</option>
      </select>
      <label for="Note">Note:</label>
      <input type="text" value="<%= phone.Note %>" name="Note" id="Note">   
      
      <label for="Received_Date">Received_Date:</label>
      <input type="text" value="<%= phone.Received_Date %>" name="Received_Date" id="Received_Date">     
      <label for="Received_Items">Received_Items:</label>
      <input type="text" value="<%= phone.Received_Items %>" name="Received_Items" id="Received_Items">     
      <label for="Inventory_Status">Inventory_Status:</label>
      <select class="select2-enable" id="Inventory_Status" name="Inventory_Status" style="width: 400px;">
        <option value="<%= phone.Inventory_Status %>"><%= phone.Inventory_Status %></option> 
        <option value="Futuredial">Futuredial</option>
        <option value="FedEx Loan">FedEx Loan</option>
        <option value="Samsung Loan">Samsung Loan</option>
        <option value="ITOCHU Loan">ITOCHU Loan</option>
        <option value="T-Mobile Loan">T-Mobile Loan</option>
        <option value="Verizon Loan">Verizon Loan</option>
      </select>
      <!-- <input type="text" value="<%= phone.Inventory_Status %>" name="Inventory_Status" id="Inventory_Status" required>      -->
      <label for="Expected_Return">Expected_Return:</label>
      <input type="text" value="<%= phone.Expected_Return %>" name="Expected_Return" id="Expected_Return">     
      <label for="Actual_Return">Actual_Return:</label>
      <input type="text" value="<%= phone.Actual_Return %>" name="Actual_Return" id="Actual_Return">     
      <label for="To_China_Date">To_China_Date:</label>
      <input type="text" value="<%= phone.To_China_Date %>" name="To_China_Date" id="To_China_Date">     
      <label for="Who_Bring_Over">Who_Bring_Over:</label>
      <input type="text" value="<%= phone.Who_Bring_Over %>" name="Who_Bring_Over" id="Who_Bring_Over">     
      <label for="Bring_Over_Items">Bring_Over_Items:</label>
      <input type="text" value="<%= phone.Bring_Over_Items %>" name="Bring_Over_Items" id="Bring_Over_Items">     
      <label for="China_Return">China_Return:</label>
      <input type="text" value="<%= phone.China_Return %>" name="China_Return" id="China_Return">     

      <button type="submit">Update</button>
    </form>
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>